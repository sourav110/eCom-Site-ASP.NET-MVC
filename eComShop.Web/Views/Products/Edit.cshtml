@model eComShop.Entities.Product

@{ 
    ViewBag.Title = "Edit"; 
}

<h2>Edit Product</h2>

<form id="editProduct">
    <input name="Id" value="@Model.Id" hidden/>
    
    <label>Name</label>
    <input name="Name" value="@Model.Name"/>
    <br />

    <label>Description</label>
    <input name="Description" value="@Model.Description"/>
    <br />

    <label>Price</label>
    <input name="Price" value="@Model.Price"/>
    <br />

    <button id="btnUpdate" type="button">Update</button>
</form>


<script>
    $("#btnUpdate").click(function () {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("Edit", "Products")',
            data: $("#editProduct").serialize()

        }).done(function (response) {
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Failed");
        });
    });
</script>